{
  "name": "video-player",
  "version": "0.0.9",
  "description": "A video player with reversing and time stretching effects",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run clean && webpack && cross-env DEVELOPMENT=true electron dist/main.js",
    "clean": "del-cli ./dist",
    "build": "npm run clean ./build && webpack && electron-builder -p never",
    "release": "npm run clean ./build && webpack && electron-builder -mwl -p always"
  },
  "keywords": [
    "video",
    "player",
    "reverse",
    "anime",
    "cute"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Tenpi/Video-Player"
  },
  "build": {
    "appId": "com.tenpi.video-player",
    "productName": "Video Player",
    "icon": "./assets/icon.png",
    "directories": {
      "buildResources": "assets",
      "output": "build"
    },
    "buildDependenciesFromSource": true,
    "mac": {
      "target": {
        "target": "dmg",
        "arch": "x64"
      },
      "category": "public.app-category.video",
      "extraFiles": [
        "ffmpeg/ffmpeg.app"
      ]
    },
    "dmg": {
      "title": "${productName}",
      "background": "./assets/background.png",
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "target": {
        "target": "nsis",
        "arch": "x64"
      },
      "extraFiles": [
        "ffmpeg/ffmpeg.exe"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "uninstallDisplayName": "Video Player",
      "createDesktopShortcut": "always",
      "installerSidebar": "./assets/installer.bmp",
      "uninstallerSidebar": "./assets/installer.bmp"
    },
    "linux": {
      "target": {
        "target": "appImage",
        "arch": "x64"
      },
      "category": "Video",
      "extraFiles": [
        "ffmpeg/ffmpeg"
      ]
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "repo": "Video-Player",
      "owner": "Tenpi",
      "releaseType": "draft"
    },
    "fileAssociations": [
      {
        "ext": "mp4",
        "description": "MP4 File"
      },
      {
        "ext": "mkv",
        "description": "MKV File"
      },
      {
        "ext": "mov",
        "description": "MOV File"
      },
      {
        "ext": "avi",
        "description": "AVI File"
      },
      {
        "ext": "webm",
        "description": "WEBM File"
      },
      {
        "ext": "m4v",
        "description": "M4V File"
      }
    ]
  },
  "author": "Tenpi",
  "license": "MIT",
  "devDependencies": {
    "@tenpi/tslint": "^1.1.0",
    "@types/fluent-ffmpeg": "^2.1.18",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "del-cli": "^3.0.1",
    "electron": "^14.0.0",
    "electron-builder": "^22.13.1",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^6.1.0",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^4.5.1",
    "less": "^4.1.0",
    "less-loader": "^7.3.0",
    "mini-css-extract-plugin": "^1.3.5",
    "node-loader": "^1.0.2",
    "terser-webpack-plugin": "^5.1.1",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.18.0",
    "webpack-cli": "^4.4.0"
  },
  "dependencies": {
    "@electron/remote": "^2.0.1",
    "bootstrap": "^4.6.0",
    "electron-shortcuts": "^0.4.0",
    "electron-store": "^8.0.0",
    "electron-updater": "^4.3.5",
    "fluent-ffmpeg": "^2.1.2",
    "rc-slider": "^9.7.1",
    "react": "^17.0.1",
    "react-bootstrap": "^1.4.3",
    "react-dom": "^17.0.1",
    "react-dropzone": "^11.4.2",
    "youtube.ts": "^0.2.2"
  }
}
